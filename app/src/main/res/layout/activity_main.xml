<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.wasuradananjith.myphonebook.MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/homenew" />

<TableLayout
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:paddingTop="40dp"
    android:stretchColumns="*"
    android:layout_marginBottom="40dp"
    android:id="@+id/tableLayout"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0">

        <ImageView
            android:id="@+id/btnAdd"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/add" />

        <ImageView
            android:id="@+id/btnSearch"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignTop="@+id/imageView2"
            app:srcCompat="@drawable/searchnew" />
    </TableRow>
    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.5">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:textColor="#00363a"
            android:textAlignment="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textColor="#00363a"
            android:textAlignment="center"
            android:textSize="14sp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0">

        <ImageView
            android:id="@+id/btnDelete"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/delete" />

        <ImageView
            android:id="@+id/btnUpdate"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignTop="@+id/imageView2"
            app:srcCompat="@drawable/updatenew" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textColor="#00363a"
            android:textAlignment="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:textColor="#00363a"
            android:textAlignment="center"
            android:textSize="14sp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:layout_weight="0">


        <Button
            android:id="@+id/btnView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/buttonshapenew"
            android:text="View All"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#00363a"
            android:textSize="14sp" />

    </TableRow>

</TableLayout>


</RelativeLayout>
